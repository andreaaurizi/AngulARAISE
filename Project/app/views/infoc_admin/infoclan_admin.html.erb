<title>Info Clan</title>


<% if(@var == 1) %><h1 align="center">Info Clan Guerrieri</h1>

    <div class = "main">

      <div class = "content">



      <%= image_tag("guerriero.jpg", :style => "display: block;  margin: 0px auto; width: 300px; height: 300px; cursor: pointer;", :alt => "logo") %>


<br><br>

<%

    vitt = 0
    scon = 0
    @users = User.all.order(created_at: :desc)
    @users.each do |user|
    if @var == 1
        vitt = vitt + user.vittorie
        scon = scon + user.sconfitte
    end
    end %>

        <dl>
        <dd>  <b> Status Clan: </b> &nbsp;&nbsp;&nbsp;&nbsp;

        <em><%= @clan1.status_clan %></em></dd>
    <p width=10%><%= link_to "Modifica", edit_clan_path(1) , class: "btn btn-lg btn-primary" %></p>
        <br>
        <dd>  <b> Membri: </b> &nbsp;&nbsp;&nbsp;&nbsp; <%= @clan1.membri %></dd>
        <br>
        <dd> <b>Vittorie Clan:</b> &nbsp;&nbsp;&nbsp;&nbsp; <%= vitt %></dd>

          <dd><b>Sconfitte Clan:</b> &nbsp;&nbsp;&nbsp;&nbsp; <%=  scon %></dd>

          <br><br>

          <dd><b>Caratteristiche Iniziali</b> &nbsp;&nbsp;&nbsp;&nbsp; </dd>
          <br>
          <dd><b>Attacco:</b> &nbsp;&nbsp;&nbsp;&nbsp;<%= 5 %></dd>

          <dd><b>Difesa:</b> &nbsp;&nbsp;&nbsp;&nbsp;<%= 5 %></dd>


          <dd><b>Attacco Speciale: </b> &nbsp;&nbsp;&nbsp;&nbsp; <%= 1 %></dd>

          <dd><b>Difesa Speciale:</b> &nbsp;&nbsp;&nbsp;&nbsp; <%= 1 %></dd>

        </dl>



      </div>

      <div class = "footer">
        <iframe src="https://it.wikipedia.org/wiki/Guerriero_(Dungeons_%26_Dragons)" width="800" height="800">
        </iframe>
      </div>
  </div>

<% end %>

