<h1>Modifica Impostazioni Utente </h1>

<title> Modifica Utente </title>


<% if flash[:danger] != nil %>
    <div class = "alert alert-danger"> <%= flash[:danger] %> </div>
<% end %>


<div class="row">


    <div class="col-md-2">
    </div>


    <div class="col-md-8">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>


            <h3>Modifica Email</h3>
            <i>(non cambiare il campo testo se non vuoi cambiarla)</i>

            <br/><br/>
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control' %>


          <br/><br/>


          <h3>Nuova Password</h3>
          <i>(lascia vuoto se non vuoi cambiarla)</i><br/><br/>





          <div class="field">
              <%= f.label :password %> <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br/>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div><br/><br/>

        <div class="field">
          <h3>Status Personale</h3>
           <br/><br/>
          <%= f.label :status %>
            <%= f.text_field(:status, class: 'form-control') %> <br/>
            </div>

        <h3>Conferma modifiche </h3>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

        <br/><br/>
          <div class="field">
            <%= f.label :current_password %>*
            <%= f.password_field :current_password, autocomplete: "current_password" , class: 'form-control'%>
          </div>

            *campi obbligatori
          <br/><br/>
          <br/><br/><br/>



          <div class="actions">
            <%= f.submit "Salva Modifiche" ,:class=> "btn btn-lg btn-primary"%>
          </div>
        <% end %>

        <footer class="footer">

        <p><%= button_to "Cancella Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , :class=> "btn btn-lg btn-primary" ,style: " background-color:#dc143c; "%></p>

        <%= link_to "Back", :back %>

    </div>


    <div class="col-md-2">
    </div>

</div>



